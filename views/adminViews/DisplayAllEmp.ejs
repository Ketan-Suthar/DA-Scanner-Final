</script>
<script>
	function enableEmp(id)
	{
		$.ajax({
                        type: 'POST',
                        url: '/admin/enableUser/',
                        data: {
                                id: id
                        },
                        success: function(data){
                        let confirm = data;
                        //$('#success').html(confirm);
						alert(confirm);
						location.reload();
                        },
                        error: function(jqXHR, textStatus, error)
                        {
                               //alert("asdasd" + error);
                               //console.log("heyuuuuu" + jqXHR.responseText);

                               let err = jqXHR.responseText;
							 	alert(err); 
							   //$("#error").html(err);
                                //console.log(jqXHR);
                               //console.log(textStatus);
                               
                        }
                
                        });
	}
	function disableEmp(id)
	{
		$.ajax({
                        type: 'POST',
                        url: '/admin/disableUser/',
                        data: {
                                id: id
                        },
                        success: function(data){
                        let confirm = data;
                        //$('#success').html(confirm);
						alert(confirm);
						location.reload();
                        },
                        error: function(jqXHR, textStatus, error)
                        {
                               //alert("asdasd" + error);
                               //console.log("heyuuuuu" + jqXHR.responseText);

                               let err = jqXHR.responseText;
							 	alert(err); 
							   //$("#error").html(err);
                                //console.log(jqXHR);
                               //console.log(textStatus);
                               
                        }
                
                        });
	}
</script>
</body>
