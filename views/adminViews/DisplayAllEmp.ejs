<body>

<%-include('adminHeader') %>
<div class="page-content-body" id="content-body">
          <br/><br/>
        <div class="row-fluid">
                <h2 style="color: black"><%=title%></h2>
                
		</div>
		<table class="table table-light table-bordered" id="EmpTable" style="max-width:90%">
			<thead class="thead-dark">
					<tr>
							<th >Employee ID</th>
							<th >Name</th>
							<th >Email</th>
							<th >Disable/Enable</th>
					</tr>
			  </thead>
			  <tbody>
				  		<% for(user of users){ %>
						 <tr>
							<td style="color:black"><%=user._id %></td>
							<td style="color:black"><%=user.fName%> <%=user.lName %></td>
							<td style="color:black"><%=user.userEmailId %></td>
							<td style="color:black">
								<%if(user.enabled){%>
								&nbsp;<a href="javascript:disableEmp(<%=user._id%>)" data-toggle="tooltip" title="Disable User!"><i class="fas fa-user-times"></i></a> <%} else{%>
								 &nbsp; &nbsp; &nbsp; &nbsp; <a href="javascript:enableEmp(<%=user._id%>)" data-toggle="tooltip" title="Enable User!"><i class="fas fa-user"></i></a><%}%>
							</td>
						  </tr>   
						  <%} %>  
			  </tbody>
	  </table>
		<br/>
		<button type="button" class="success" onclick="location.href='/admin/addEmpUser'">Add Employee</button>
		
		
  


<!--</div>--> 
</div>
